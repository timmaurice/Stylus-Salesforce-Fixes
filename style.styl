/* ==UserStyle==
@name           Stylus Salesforce Overwrite
@namespace      github.com/timmaurice/Stylus-Salesforce-Fixes
@version        1.0.1
@description    A stylus css salesforce overwrite that fix things
@author         Tim Maurice Bayer
==/UserStyle== */
dia-green = #BABC16
dia-green-light = #f4f5ae

@-moz-document domain("lightning.force.com"), domain("sandbox.my.salesforce.com"), domain("my.salesforce.com")
	.slds-nav-vertical__action:hover
		box-shadow: inset 0.125rem 0 0 dia-green

	// Adds a DIA touch to the setup interface
	.slds-nav-vertical__item
		&:hover:before,
		&.slds-is-active:before
			background: rgba(dia-green-light, 0.2)

	// Mouse over, active look
	.slds-tree [role=treeitem][aria-selected=true]>.slds-tree__item,
	.onesetupSetupNavTree ul[data-name=all] .tree-node[aria-selected=true] .slds-tree__item,
	.slds-nav-vertical__item.slds-is-active .slds-nav-vertical__action
		background: dia-green-light
		box-shadow: dia-green 4px 0 0 inset

	// Fix for the clickable button area
	.slds-tree__item
		cursor: default
		padding: 0

		.slds-button
			margin-top: 6px

		a
			padding: 0.375rem 0
			width: 100%

	// Shows text areas monospace
	.dataCell,
	.bPageBlock .detailList tr.detailRow td,
	.data2Col,
	[slot='outputField'],
	lightning-formatted-text[data-output-element-id='output-field']
		font-family: monospace
		font-size: 10px
		line-height: 90%
		white-space: break-spaces

	// Revert for Deployment Status and Sandbox List Page
	tbody:has([id^='MonitorDeploymentsPage']),
	tbody:has([id^='listSandbox'])
		.dataCell
			white-space: nowrap

	// Is allowing copy and paste in translation workbench
	.x-grid3-cell-inner
		text-overflow: unset
		user-select: all
		white-space: normal